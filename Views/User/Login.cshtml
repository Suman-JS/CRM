
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <title>INSIGHT CRM - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .custom-dropdown {
            border-radius: 20px;
            padding: 0.5rem 1rem;
            height: inherit;
            font-family: "Nunito",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
            -webkit-appearance: none;
            -moz-appearance: none;
            /*appearance: none;*/
        }

    </style>
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">


            <div class="col-xl-10 col-lg-12 col-md-9">

                @if (ViewBag.Fail == true)
                {
                    <div class="alert alert-danger text-center" role="alert" style="margin-top:10px;z-index:5;">
                        Wrong Credentials!! Try Again....
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span>&times;</span>
                        </button>
                    </div>
                 }


                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <CENTER>
                                    <img src="~/img/INSIGHT.PNG" height="80%" width="80%" />
                                    <br />
                                    <h1 class="h1 text-gray-900 mb-lg-1">INSIGHT CRM</h1>
                                    <h1 class="h6 text-gray-900 mb-sm-5">Powered By <b>INGENIOUS GROUP</b>.</h1>
                                </CENTER>
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">LOG IN</h1>
                                    </div>


                                    <form @*autocomplete="off"*@ class="user" method="post" action="/User/Login">

                                        <div class="form-group"> 
                                            @Html.DropDownList("ProjectToVisit", (IEnumerable<SelectListItem>)ViewBag.Project, "Select Project", new                { @class = "form-control custom-dropdown", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="exampleInputEmail"
                                                   placeholder="UserName" name="uid" required>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password" name="password" required>
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />
                                        <br />
                                    </form>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <script src="~/js/CustomJS/AutoHideAlert.js"></script>
</body>

</html>